<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_stcl_id"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="Mã Lớp"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <Spinner
                android:id="@+id/sp_addst_id"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_st_id"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="Mã SV"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/ed_dialog_addst_id"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mã Sinh Viên"
                android:padding="8dp"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_st_name"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="8dp"
                android:text="Tên SV"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/ed_dialog_addst_name"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tên Sinh Viên"
                android:padding="8dp"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_dialog_addst_clear"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Xóa Trắng"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_dialog_addst_add"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Thêm Sinh viên"
                android:textSize="20dp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

</LinearLayout>